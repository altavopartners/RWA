# ========================================
# HEDERA TESTNET CONFIGURATION
# ========================================
# For production, use mainnet values
# For development/testing, use testnet values

HEDERA_NETWORK=testnet

# Your Hedera Testnet Account ID (e.g., 0.0.XXXXXXXX)
# Get from: https://portal.hedera.com/
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID

# ED25519 Private Key in HEX format (64 characters = 32 bytes)
# Format: Do NOT include "0x" prefix
# Example: e19294c52dde87cfd02836212667af627fadea731a4481566640f8b785ae0828
HEDERA_PRIVATE_KEY=your_ed25519_private_key_hex_here

# Supply Key for NFT minting (ED25519, hex format, 64 chars)
# If not provided, auto-generated during first NFT creation
HEDERA_SUPPLY_KEY=your_supply_key_hex_here

# HCS (Hedera Consensus Service) Topic ID for event logging
# Topic used for immutable audit trail of order events
# Example: 0.0.28659765 (testnet topic for RWA project)
HEDERA_HCS_TOPIC_ID=0.0.28659765

# Hedera Operator Key in DER format (for contract deployment)
# Used by Hardhat for smart contract deployment
HEDERA_OPERATOR_KEY=your_operator_key_der_format

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Local: postgresql://postgres:password@localhost:5432/rwa_db
# Docker Compose: postgresql://postgres:password@db:5432/rwa_db
DATABASE_URL=postgresql://user:password@localhost:5432/rwa_db

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Secret Key (use strong random string in production)
# Generate: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_min_32_chars

# JWT Expiration (e.g., 7d, 24h, 30m)
JWT_EXPIRY=7d

# CORS Origins (comma-separated for multiple domains)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# STORAGE & FILE UPLOADS
# ========================================

# Storacha/Web3 Delegation Proof (optional)
# For document uploads to W3 Storage
W3_PROOF=your_storacha_delegation_proof_base64

# File upload directory (relative to server root)
UPLOAD_DIR=./uploads

# Max upload file size (in bytes, default 10MB)
MAX_FILE_SIZE=10485760

# ========================================
# SERVER CONFIGURATION
# ========================================

# Server port
PORT=4000

# Node environment (development, production, test)
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable verbose logging for debugging
DEBUG=false

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# API endpoint for frontend (NEXT_PUBLIC_ prefix makes it accessible in browser)
NEXT_PUBLIC_API_URL=http://localhost:4000

# Hedera network for frontend
NEXT_PUBLIC_NETWORK=testnet
