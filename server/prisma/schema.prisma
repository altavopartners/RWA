generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:examplepassword@localhost:5432/hexport"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  quantity      Int
  unit          String
  pricePerUnit  Float
  countryOfOrigin String
  category      String
  subcategory   String?
  description   String
  hsCode        String?
  incoterm      String?
  minOrderQty   Int?
  leadTimeDays  Int?

  // JSON arrays for storing file paths or metadata
  images        Json?
  documents     Json?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
