# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================
# All variables prefixed with NEXT_PUBLIC_ are accessible in the browser

# Node Environment (development, production, staging)
NODE_ENV=development

# ========================================
# API CONFIGURATION
# ========================================
# Backend API endpoint
# Local development: http://localhost:4000
# Docker/Production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:4000

# ========================================
# HEDERA CONFIGURATION
# ========================================
# Hedera network for frontend operations
# Values: testnet, mainnet
NEXT_PUBLIC_HEDERA_NETWORK=testnet

# Hedera Testnet Account ID (display/reference only)
# Real credentials come from backend
NEXT_PUBLIC_HEDERA_ACCOUNT_ID=0.0.6170373

# ========================================
# WALLET CONFIGURATION
# ========================================
# MetaMask/WalletConnect configuration
# Network Chain ID for EVM operations
NEXT_PUBLIC_CHAIN_ID=296

# Network name for wallet connection UI
NEXT_PUBLIC_NETWORK_NAME=Hedera Testnet

# ========================================
# HCS CONFIGURATION (Optional)
# ========================================
# Hedera Consensus Service Topic ID for event monitoring
# Used to display order events in real-time
NEXT_PUBLIC_HCS_TOPIC_ID=0.0.6870936

# Hedera Mirror Node endpoint for event polling
NEXT_PUBLIC_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# ========================================
# STORACHA/WEB3 CONFIGURATION (Optional)
# ========================================
# IPFS Gateway for document retrieval
NEXT_PUBLIC_IPFS_GATEWAY=https://up.storacha.network

# ========================================
# ANALYTICS & MONITORING (Optional)
# ========================================
# Google Analytics ID (if using)
# NEXT_PUBLIC_GA_ID=G_XXXXXXXXXX

# ========================================
# APPLICATION FEATURES (Optional)
# ========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_WALLET_CONNECT=true
NEXT_PUBLIC_ENABLE_DOCUMENT_UPLOAD=true
NEXT_PUBLIC_ENABLE_DISPUTE_RESOLUTION=true
